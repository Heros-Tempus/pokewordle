                <Label x:Name="lbl_TypeA_Slot2" Content="Type A" Foreground="White" Background="#801F1F1F"/>
                <Label x:Name="lbl_TypeB_Slot2" Content="Type B" Foreground="White" Background="#801F1F1F"/>
            </StackPanel>
        </GroupBox>
        <GroupBox x:Name="gb_Slot3" Header="Slot 3" Margin="326,60,0,0" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left" Width="153">
            <StackPanel>
                <ComboBox x:Name="cb_Slot3" Width="120"/>
                <Label x:Name="lbl_Name_Slot3" Content="Name" Foreground="White" Background="#801F1F1F" />
                <Label x:Name="lbl_TypeA_Slot3" Content="Type A" Foreground="White" Background="#801F1F1F"/>
                <Label x:Name="lbl_TypeB_Slot3" Content="Type B" Foreground="White" Background="#801F1F1F"/>
            </StackPanel>
        </GroupBox>
        <GroupBox x:Name="gb_Slot4" Header="Slot 4" Margin="10,183,0,0" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left" Width="153">
            <StackPanel>
                <ComboBox x:Name="cb_Slot4" Width="120"/>
                <Label x:Name="lbl_Name_Slot4" Content="Name" Foreground="White" Background="#801F1F1F" />
                <Label x:Name="lbl_TypeA_Slot4" Content="Type A" Foreground="White" Background="#801F1F1F"/>
                <Label x:Name="lbl_TypeB_Slot4" Content="Type B" Foreground="White" Background="#801F1F1F"/>
            </StackPanel>
        </GroupBox>
        <GroupBox x:Name="gb_Slot5" Header="Slot 5" Margin="168,183,0,0" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left" Width="153">
            <StackPanel>
                <ComboBox x:Name="cb_Slot5" Width="120"/>
