                <Label x:Name="lbl_TypeA_Slot5" Content="Type A" Foreground="White" Background="#801F1F1F"/>
                <Label x:Name="lbl_TypeB_Slot5" Content="Type B" Foreground="White" Background="#801F1F1F"/>
            </StackPanel>
        </GroupBox>
        <GroupBox x:Name="gb_Slot6" Header="Slot 6" Margin="326,183,0,0" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left" Width="153">
            <StackPanel>
                <ComboBox x:Name="cb_Slot6" Width="120"/>
                <Label x:Name="lbl_Name_Slot6" Content="Name" Foreground="White" Background="#801F1F1F" />
                <Label x:Name="lbl_TypeA_Slot6" Content="Type A" Foreground="White" Background="#801F1F1F"/>
                <Label x:Name="lbl_TypeB_Slot6" Content="Type B" Foreground="White" Background="#801F1F1F"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
